<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMultiAction"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:layout_alignBottom="@+id/xviiToolbar"
    android:background="@drawable/shape_rounded_rect"
    android:clickable="true"
    android:elevation="4.1dp"
    android:focusable="true"
    android:tag="extraLight"
    android:visibility="gone"
    tools:parentTag="android.widget.RelativeLayout"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/ivCancelMulti"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_clear"
        android:tag="dark" />

    <TextView
        android:id="@+id/tvSelectedCount"
        style="@style/MainMediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/ivCancelMulti"
        android:textSize="18sp"
        tools:text="289 messages" />

    <ImageView
        android:id="@+id/ivMarkMulti"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_star_white"
        android:tag="dark" />

    <ImageView
        android:id="@+id/ivDeleteMulti"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/ivMarkMulti"
        android:src="@drawable/ic_delete"
        android:tag="dark" />

    <ImageView
        android:id="@+id/ivForwardMulti"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/ivDeleteMulti"
        android:src="@drawable/ic_transfer"
        android:tag="dark" />

    <ImageView
        android:id="@+id/ivReplyMulti"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/ivForwardMulti"
        android:src="@drawable/ic_reply"
        android:tag="dark" />

</RelativeLayout>