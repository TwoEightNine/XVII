<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ivMessageIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_envelope" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivMessageIcon"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/ivMessageIcon"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvName"
        fontPath="fonts/medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMessageIcon"
        android:layout_alignStart="@+id/ivMessageIcon"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:maxLines="1"
        android:textColor="@color/main_text"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingPrefix"
        tools:text="name name anme" />

    <TextView
        android:id="@+id/tvWhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivMessageIcon"
        android:layout_alignBottom="@+id/ivMessageIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/other_text"
        android:textSize="12sp"
        tools:text="12:36" />

    <TextView
        android:id="@+id/tvMessages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignStart="@+id/ivMessageIcon"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:maxLines="1"
        android:textColor="@color/other_text"
        android:textSize="14sp"
        tools:text="name name anme" />


</RelativeLayout>