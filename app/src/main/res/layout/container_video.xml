<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivVideo"
        android:layout_width="256dp"
        android:layout_height="192dp"
        android:layout_margin="@dimen/image_margin"
        app:riv_corner_radius="@dimen/default_radius" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shape_circle_video" />

    <ImageView
        android:id="@+id/ivPlayWhite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/play_white" />

    <RelativeLayout
        android:id="@+id/rlDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ivVideo"
        android:layout_alignBottom="@+id/ivVideo"
        android:background="@drawable/shape_dur_video">

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:fontFamily="sans-serif-light"
            android:text="12:34"
            android:textColor="@color/icons"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>