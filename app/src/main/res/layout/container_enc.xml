<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="@dimen/chat_message_doc_size"
            android:layout_height="@dimen/chat_message_doc_size"
            android:background="@drawable/doc_shape"
            android:tag="dark">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_key" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin8"
            android:layout_toEndOf="@+id/relativeLayout"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitle"
                style="@style/MainMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="17sp"
                tools:text="kizaru.mp3" />

            <TextView
                android:id="@+id/tvSize"
                style="@style/OtherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="13 kB" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>