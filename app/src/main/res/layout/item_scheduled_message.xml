<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/selector_rect"
    android:paddingTop="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPeer"
        style="@style/MainBoldText"
        android:textSize="17sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@+id/tvWhen"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="peer peer peer peer"/>


    <TextView
        android:id="@+id/tvWhen"
        style="@style/OtherText"
        android:textSize="13sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvPeer"
        android:layout_alignBottom="@+id/tvPeer"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="13 Sep 2021 14:16"/>

    <TextView
        android:id="@+id/tvText"
        style="@style/MainText"
        android:layout_below="@+id/tvPeer"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="message sample message sample message sample message sample"/>

    <TextView
        android:id="@+id/tvInfo"
        style="@style/OtherText"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4 attachments, has forwarded messages"/>

    <View
        android:layout_below="@+id/tvInfo"
        android:layout_marginTop="12dp"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</RelativeLayout>