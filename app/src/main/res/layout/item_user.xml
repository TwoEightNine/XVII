    <!--android:layout_marginLeft="83dp"-->
    <!--android:layout_below="@+id/rlItemContainer"-->
    <!--android:background="@color/divider"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1px" />-->

</RelativeLayout>