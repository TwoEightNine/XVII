<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/status_bar</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Transparent.Photo">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/open_activity</item>
        <item name="android:windowExitAnimation">@anim/close_activity</item>
    </style>

    <style name="AppTheme.ToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ToolbarPopup" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:colorBackground">@color/popup</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:colorControlActivated">@color/main_text</item>
        <item name="android:colorControlHighlight">@color/main_text</item>
        <item name="android:colorControlNormal">@color/main_text</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:titleTextStyle">@style/ActionBarStyle.Title</item>
        <item name="titleTextStyle">@style/ActionBarStyle.Title</item>
        <item name="android:subtitleTextStyle">@style/ActionBarStyle.Subtitle</item>
        <item name="subtitleTextStyle">@style/ActionBarStyle.Subtitle</item>
    </style>

    <style name="ActionBarStyle.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBarStyle.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="TextViewStyle.Small">
        <item name="android:textSize">15sp</item>

    </style>

    <style name="TextViewStyle.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainText">
        <item name="android:layout_marginTop">@dimen/text_view_top_margin</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="MainBoldText" parent="MainText">
        <item name="fontPath">fonts/Rubik-Regular.ttf</item>
    </style>

    <style name="OtherText">
        <item name="android:layout_marginTop">@dimen/text_view_top_margin</item>
        <item name="android:textColor">@color/other_text</item>
    </style>

    <style name="AccentText">
        <item name="android:layout_marginTop">@dimen/text_view_top_margin</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="WhiteText">
        <item name="android:layout_marginTop">@dimen/text_view_top_margin</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">fonts/Rubik-Regular.ttf</item>
        <item name="android:layout_marginTop">@dimen/text_view_top_margin</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/toolbar_text</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_marginTop">@dimen/text_view_top_margin</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TitleStripText" parent="MainText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="fontPath">fonts/Rubik-Regular.ttf</item>
    </style>

    <style name="AccentButton" parent="Button">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedButton" parent="Button">
        <item name="android:background">@drawable/shape_button_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
